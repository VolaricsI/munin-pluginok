if [ "$1" = "autoconf" ]; then
	echo yes
	exit 0
fi

if [ "$1" = "config" ]; then
	echo 'graph_category sensors'
	echo 'graph_title Homersekletek'
	echo 'graph_vtitle Â°C'
	echo 'graph_vlabel °Celsius'	#Â°C	a megjelenÃ­tÃ©s miatt
	SorSzam=0
	sensors |grep -e "${HO}" |while read a; do
		a=${a//:*/}
		SorSzam=$[${SorSzam}+1];
		echo "Temp${SorSzam}.label ${a}"
		done
