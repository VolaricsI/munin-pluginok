fi

#:::::: Start :::::::::::::::::
SorSzam=0
sensors |grep -e "${HO}" |while read a; do
	a=${a//*:/}; a=${a/${HO}*}; a=${a// /}
	SorSzam=$[${SorSzam}+1];
	echo "Temp${SorSzam}.value ${a}"
done

exit 0